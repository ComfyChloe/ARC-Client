{
  "name": "arc-osc-client",
  "version": "0.22.5",
  "author": "ComfyChloe",
  "description": "Standalone OSC Client for ARC-OSC",
  "main": "main.js",
  "private": false,
  "dependencies": {
    "osc": "2.4.5",
    "socket.io-client": "4.7.4"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "24.9.1"
  },
  "build": {
    "appId": "com.arcrosc.oscclient",
    "productName": "ARC-OSC Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "utils/**/*",
      "package.json",
      "!node_modules/**/*.md",
      "!node_modules/**/*.txt",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/README*",
      "!node_modules/**/.npmignore",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/docs/**",
      "!node_modules/**/example/**",
      "!node_modules/**/examples/**",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*.map"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/@serialport/**/*",
      "**/node_modules/serialport/**/*"
    ],
    "extraResources": [
      "userdata"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "compression": "maximum",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
