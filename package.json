{
  "name": "arc-osc-client",
  "version": "0.22.8",
  "author": "ComfyChloe",
  "description": "Standalone OSC Client for ARC-OSC",
  "main": "main.js",
  "private": false,
  "dependencies": {
    "naive-ui": "2.38.1",
    "osc": "2.4.5"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "24.9.1"
  },
  "build": {
    "appId": "com.arcrosc.oscclient",
    "productName": "ARC-OSC Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "utils/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/**"
    ],
    "extraResources": [
      "userdata"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    }
  }
}
