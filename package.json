{
  "name": "arc-osc-client",
  "version": "0.18.00",
  "description": "Standalone OSC Client for ARC-OSC Server",
  "main": "main.js",
  "private": true,
  "author": "ARC-OSC Team",
  "dependencies": {
    "@homebridge/ciao": "^1.3.4",
    "axios": "^1.11.0",
    "bonjour-service": "^1.3.0",
    "naive-ui": "^2.38.1",
    "osc": "^2.4.5",
    "portfinder": "^1.0.37",
    "socket.io-client": "^4.7.4",
    "vue": "^3.4.21"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.arcrosc.oscclient",
    "productName": "ARC-OSC Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "client.js",
      "preload.js",
      "config.json",
      "lib/**/*",
      "renderer/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    }
  }
}
